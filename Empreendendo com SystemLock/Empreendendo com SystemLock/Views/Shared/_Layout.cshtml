<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SystemLock - Home Empresa_SystemLock</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Empresa_SystemLock.styles.css" asp-append-version="true" />

    <div class="container">
        @RenderBody()  <!-- Aqui será renderizado o conteúdo da página -->
    </div>

    <style>
        body, html {
            height: 100%; /* Garante que a altura da página ocupa a tela inteira */
            margin: 0;
            padding: 0;
            overflow-x: hidden; /* Desabilita rolagem horizontal */
            overflow-y: auto; /* Permite rolagem vertical */
            background-color: #f0f0f0; /* Fundo branco */
            color: #0066cc; /* Texto azul */
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #fff; /* Cabeçalho branco */
            padding: 15px 0;
        }

        .navbar-brand img {
            height: 40px;
            width: auto;
        }

        .carousel-images img {
            width: 80%; /* Ajuste do tamanho do carrossel */
            height: auto;
            margin: 0 auto;
        }

        .benefit-icon {
            width: 50px;
            height: 50px;
        }

        .footer img {
            width: 30px;
            height: 30px;
            margin-right: 10px;
        }

        .footer ul {
            list-style-type: none;
            padding: 0;
        }

            .footer ul li {
                margin: 5px 0;
            }

        .carousel {
            position: relative;
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }

        .carousel-images {
            display: flex;
            overflow: hidden;
            width: 90%;
        }

            .carousel-images img {
                flex: 0 0 100%;
                transition: transform 0.5s ease-in-out;
            }

        .carousel-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }

        .title-section {
            margin-top: 50px; /* Ajuste do espaçamento */
        }

        .section-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .info-box {
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            max-height: 400px; /* Limita a altura */
            overflow-y: auto; /* Caso o conteúdo ultrapasse, permite rolagem interna */
        }

            .info-box h4 {
                font-size: 24px;
                color: #007bff;
                font-weight: bold;
                margin-bottom: 15px;
            }

            .info-box p {
                font-size: 18px;
                color: #ffffff;
                line-height: 1.6;
            }

        .benefit-item p strong {
            font-weight: bold;
        }

        .info-box {
            background: linear-gradient(to right, rgb(0, 0, 131), rgb(85, 11, 91));
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-bottom: 30px;
            transition: all 0.3s ease-in-out;
            max-width: 800px; /* Limita a largura */
            margin-left: auto;
            margin-right: auto;
        }

            .info-box:hover {
                transform: scale(1.02);
            }

        .section-title {
            font-size: 22px;
            color: #003366;
            font-weight: bold;
            margin-bottom: 15px;
            text-align: center;
        }

        .section-description {
            font-size: 16px;
            line-height: 1.6;
            color: #333;
            text-align: justify;
            margin-bottom: 15px;
        }

        .section-image {
            text-align: center;
            margin-top: 15px;
        }

        .section-icon {
            width: 60px;
            height: 60px;
        }

        .about-section {
            background-color: #f1f8ff;
            border-left: 8px solid #0066cc;
        }

        .mission-section {
            background-color: #f8f1ff;
            border-left: 8px solid #9900cc;
        }

        .terms-section {
            background-color: #fff0f1;
            border-left: 8px solid #ff6600;
        }

        /* Adicionando animação suave nas seções */
        .info-box {
            animation: fadeIn 0.5s ease-in-out;
        }
    </style>
</head>

