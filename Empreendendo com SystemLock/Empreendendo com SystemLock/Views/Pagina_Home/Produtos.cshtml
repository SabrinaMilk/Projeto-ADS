@{
    Layout = ViewBag.Layout ?? "~/Views/Shared/_Layout-geral.cshtml";
    ViewBag.Title = "SystemLock - Planos & Produtos";

}<section class="planos-container">
    <h2 class="text-center title-section">PLANOS DISPONÍVEIS</h2>
    <div class="row planos">

       

        <!-- Plano Básico -->
        <div class="col-md-6 plano essencial">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title2">PLANO ESSENCIAL</h3>
                    <p> Ideal para usuários que buscam apenas as funções básicas de localização e um carro ocasional.
                    </p>
                    <ul class="list-unstyled">
                        <li class="card-title">Benefícios:</li>
                        <li class="listagem">- Acesso ao APP LocaGuard com diversas funcionalidades;</li>
                        <li class="listagem">- Localização em tempo real de frotas de ônibus em todo o Brasil;</li>
