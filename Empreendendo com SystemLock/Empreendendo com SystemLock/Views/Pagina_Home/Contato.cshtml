@{
    Layout = ViewBag.Layout ?? "~/Views/Shared/_Layout-geral.cshtml";
    ViewBag.Title = "SystemLock - Contato";
}

<div class="contato-container">
    <h2 class="text-center">Entre em Contato</h2>
    <p class="text-center">Estamos aqui para te ajudar! Fale conosco através do formulário abaixo ou por um dos nossos canais de atendimento.</p>

    <!-- Formulário de Contato -->
    <div class="contato-form">
        <form action="/Contato/EnviarContato" method="post">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" name="nome" id="nome" class="form-control" placeholder="Seu nome completo" required />
            </div>
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Seu e-mail" required />
            </div>
            <div class="form-group">
                <label for="mensagem">Mensagem/Dúvida:</label>
                <textarea name="mensagem" id="mensagem" class="form-control" rows="5" placeholder="Escreva sua dúvida ou mensagem" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>

    <!-- Mensagem de Sucesso -->
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <!-- Informações de Contato -->
    <div class="contato-info">
        <h3>Outras Formas de Contato</h3>
        <ul>
            <li>E-mail: <a href="mailto:suporte@systemlock.com">suporte@systemlock.com</a></li>
            <li>Telefone: (11) 4002-8922</li>
            <li>WhatsApp: <a href="https://wa.me/551140028922" target="_blank">(11) 4002-8922</a></li>
            <li>Horário de Atendimento: Segunda a Sexta, das 8h às 18h</li>
        </ul>
    </div>

    <!-- Link para WhatsApp ou Chat Flutuante -->
    <div class="contato-chat">
        <p>Ou entre em contato diretamente pelo WhatsApp:</p>
        <a href="https://wa.me/551140028922" target="_blank" class="btn btn-success">Fale Conosco no WhatsApp</a>
    </div>
</div>

<style>
    /* Área Contato */
    .contato-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
        background-color: #ffffff; /* Fundo branco */
        font-family: Arial, sans-serif;
    }

    /* Estilo para o título e parágrafo */
    h2, p {
        color: #003366; /* Azul escuro */
    }

    .text-center {
        text-align: center;
    }

    .contato-form {
        background-color: #cce7ff; /* Cor de fundo suave para o formulário */
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
        color: #ff6600;
    }

    .form-control {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
        font-size: 16px;
        color: #333;
    }

    .form-control:focus {
        border-color: #003366; /* Azul escuro */
        box-shadow: 0 0 5px rgba(0, 51, 102, 0.5);
    }

    .btn {
        background-color: #003366; /* Azul escuro */
        color: white;
        border: none;
        padding: 12px 25px;
        cursor: pointer;
        font-size: 16px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .btn:hover {
        background-color: #002244; /* Azul mais escuro */
    }

    .contato-info {
        margin-bottom: 30px;
    }

    .contato-info h3 {
        font-size: 1.6em;
        color: #003366; /* Azul escuro */
        margin-bottom: 15px;
    }

    .contato-info ul {
        list-style-type: none;
        padding-left: 0;
    }

    .contato-info ul li {
        font-size: 1.1em;
        margin-bottom: 10px;
        color: #003366; /* Azul escuro */
    }

    .contato-info ul li a {
        color: #ff6600; /* Laranja */
        text-decoration: none;
    }

    .contato-info ul li a:hover {
        text-decoration: underline;
    }

    .contato-chat {
        text-align: center;
    }

    .contato-chat p {
        font-size: 1.2em;
        color: #003366; /* Azul escuro */
        margin-bottom: 15px;
    }

    .contato-chat .btn {
        background-color: #25d366; /* Cor do WhatsApp */
        padding: 12px 30px;
        font-size: 16px;
        border-radius: 5px;
    }

    .contato-chat .btn:hover {
        background-color: #128c7e; /* Cor do WhatsApp mais escura */
    }

    /* Adicionando bordas e suavizando elementos para foco */
    .form-control, .btn {
        border-radius: 8px;
    }

    /* Adicionando animação suave nos elementos */
    .contato-form, .contato-info, .contato-chat {
        animation: fadeIn 0.8s ease-in-out;
    }

  
</style>
